<head>
    <script
        src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.0/dist/alpine.js"
        defer></script>
    <style>
        /* Basic styles for the navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: black;
            padding: 1rem;
        }
        .nav-links {
            display: flex;
            list-style: none;
            justify-content: center; /* Center the list items */
            width: 100%;
        }
        .nav-links li a {
            color: white;
            text-decoration: none;
            padding: 0.5rem 1.5rem;
        }
        .nav-links li a:hover {
            background-color: black;
            color: white;
            border-radius: 40px;
        }
        /* Styles for mobile menu */
        .mobile-menu {
            display: none;
        }
        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }
            .mobile-menu {
                display: block;
            }
            .sidebar {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: #333;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                z-index: 1000;
            }
            .sidebar.active {
                display: flex;
            }
        }
    </style>
</head>
<body x-data="{ open: false }">
    <nav class="navbar">
        <div class="w-[180px] ml-[10%] text-white font-bold">
            <div class="w-[180px] h-[75px] flex items-center justify-center">
                <img
                    src="https://i.imgur.com/DomSl8e.png"
                    class="w-full h-full"
                />
            </div>
        </div>

        <ul class="nav-links ml-[-200px]">
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <div class="p-2 ml-[-150px] w-[200px] flex items-center justify-center">
            <button
                class="w-[110px] h-[40px] rounded-lg text-white bg-[#FF6000] flex items-center justify-center ml-[-50px] text-[15px] font-bold"
            >
                Sign Up
            </button>
        </div>
        <button @click="open = !open" class="mobile-menu">Menu</button>
    </nav>
    <div
        :class="{'active': open}"
        class="sidebar"
        @click.away="open = false"
        @click="open = false"
    >
        <ul class="visible md:invisible">
            <li>
                <a href="#" class="text-[#FF6000]" @click="open = false">Home</a
                >
            </li>
            <li><a href="#" @click="open = false">About</a></li>
            <li><a href="#" @click="open = false">Services</a></li>
            <li><a href="#" @click="open = false">Contact</a></li>
        </ul>
    </div>
</body>
